@model OnlineBankingMVC.Models.UserProfileViewModel
@{
    ViewBag.Title = "Login";
}

<h2>Login A Registered User</h2>
@if(@ViewData["ErrorMessage"]==null){
@using (@Html.BeginForm("Login")) 

{

    <div class="form-group row">
    @Html.LabelFor(model => model.AccountNumber, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-6">
        @Html.EditorFor(model => model.AccountNumber, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.AccountNumber, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group row">
    @Html.LabelFor(model => model.LoginPassword, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-6">
        @Html.EditorFor(model => model.LoginPassword, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.LoginPassword, "", new { @class = "text-danger" })
    </div>
</div>
<p>@ViewData["INVALIDUSER"]</p>

<div class="form-group row">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="LOGIN" class="btn btn-outline-success" />
    </div>
</div>
}}
else{
    <p>Your Account is Locked
        Please Use the ForgotPassword option To reset Your passord 
        and that will Allow you to Login again
    </p>
}

<div class="form-group row">
    <div class="col-md-offset-2 col-md-10">
      @Html.ActionLink("Forgot Password","GenerateOtp","User")
    </div>
</div>